@model PuntoDeVenta.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="col-md-12 text-align-center">
        <h4 class="titulo1">Registrar Usuario</h4>
        <p class="lead">
            Cree un nuevo usuario para acceder al sistema.
        </p>
    </div>
    <hr />
    <div class="container">
        <div class="card">
            <div class="card-body">
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                   
                    <div class="col-md-12">
                        <label>Nombre</label>
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control formulario1" })
                    </div>
                </div>
                <div class="form-group">
                   
                    <div class="col-md-12">
                        <label>Apellido</label>
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control formulario1" })
                    </div>
                </div>
                <div class="form-group">
                    
                    <div class="col-md-12">
                        <label>Correo</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control formulario1" })
                    </div>
                </div>
                <div class="form-group">
                   
                    <div class="col-md-12">
                        <label>Contraseña</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control formulario1" })
                    </div>
                </div>
                <div class="form-group">
                    
                    <div class="col-md-12">
                        <label>Confirmar Contraseña</label>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control formulario1" })
                    </div>
                </div>
                <div class="form-group">
                   
                    <div class="col-md-12">
                        <label>Perfil</label>
                        @Html.DropDownListFor(m => m.Rol, new SelectList(ViewBag.Roles, "Value", "Text"), new { @class = "form-control formulario1" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn botonstyle2" value="Registrarse" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

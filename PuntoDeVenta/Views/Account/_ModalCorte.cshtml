@{
    var model = (PuntoDeVenta.Models.CortesCajero)ViewBag.Corte;
}

@if (ViewBag.Exist != null && ViewBag.Exist == true)
{
    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">¡Declarar!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, htmlAttributes: new { @id = "Form1" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="modal-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(x => model.NumCorte, htmlAttributes: new { @for = "TypeCuenta" })
                            @Html.EditorFor(x => model.NumCorte, new { htmlAttributes = new { @class = "form-control formulario1", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(x => model.NumCorte, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => model.Comentario, htmlAttributes: new { @for = "TypeCuenta" })
                            @Html.TextAreaFor(x => model.Comentario, new { @class = "form-control formulario1", @rows = "3" })
                            @Html.ValidationMessageFor(x => model.Comentario, "", new { @class = "text-danger" })
                        </div>
                        @Html.HiddenFor(x => model.Id)
                    </div>
                    <div class="modal-footer">
                       
                        <button id="submitForm" type="button" class="btn btn-success botonaceptar">Guardar</button>
                    </div>
                }
            </div>
        </div>
    </div>
}

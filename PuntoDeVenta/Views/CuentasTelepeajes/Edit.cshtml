@model PuntoDeVenta.Models.CuentasTelepeaje

@{
    ViewBag.Title = "Editar";
}

<h2 class="titulo1">Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4 class="titulo2">Cuenta Telepeaje</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <div class="container">
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    @Html.LabelFor(model => model.NumCuenta, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.NumCuenta, new { htmlAttributes = new { @class = "form-control formulario1", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.NumCuenta, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SaldoCuenta, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.SaldoCuenta, new { htmlAttributes = new { @class = "form-control formulario1" } })
                        @Html.ValidationMessageFor(model => model.SaldoCuenta, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TypeCuenta, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.TypeCuenta, new { htmlAttributes = new { @class = "form-control formulario1", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.TypeCuenta, "", new { @class = "text-danger" })
                    </div>
                </div>

                @Html.HiddenFor(model => model.StatusCuenta)

                @Html.HiddenFor(model => model.StatusResidenteCuenta)

                @Html.HiddenFor(model => model.DateTCuenta)

                @Html.HiddenFor(model => model.ClienteId)

                @Html.HiddenFor(model => model.IdCajero)

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar" class="btn botonstyle3" />
                    </div>
                </div>
            </div>
            }

            <div>
                @Html.ActionLink("Regresar a la lista", "Index")
            </div>
            </div>
        </div>
    </div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }

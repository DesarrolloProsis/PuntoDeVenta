@model DateTime?

@if (!Model.HasValue)
{
    <input type="date" id="@ViewData.TemplateInfo.GetFullHtmlFieldId("")" name="@ViewData.TemplateInfo.GetFullHtmlFieldName("")" class="form-control espacio" />
        }
        else
        {

    <input type="date" value="@Model.Value.Date.ToString(System.DateTime.Now.ToString("yyyy-MM-dd"))" id="@ViewData.TemplateInfo.GetFullHtmlFieldId("")" name="@ViewData.TemplateInfo.GetFullHtmlFieldName("")" class="form-control espacio" />
}


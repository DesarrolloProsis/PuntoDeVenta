@model PuntoDeVenta.Models.GenerarReportesViewModel

@if (Model.PropertiesList != null && Model.PropertiesList.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Num Corte</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Fecha Inicio</th>
                    <th scope="col">Fecha Fin</th>
                    <th scope="col">Acción</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 0;
                    foreach (var item in Model.PropertiesList)
                    {
                        <tr>
                            <th scope="row">@(++i)</th>
                            <td>@item.NumCorte</td>
                            <td>@item.NomCajero</td>
                            <td>@item.DateInicio</td>
                            <td>@item.DateFin</td>
                            <td><a role="button" class="btn btn-info" href="@Url.Action("Index", "Reportes", routeValues: new { item.Id })">Generar</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="col-lg-12">
        <p class="text-center lead">NO HAY DATOS</p>
    </div>
}

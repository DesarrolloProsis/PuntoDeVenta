@model DateTime?
@if (!Model.HasValue)
{
    <input type="date" id="@ViewData.TemplateInfo.GetFullHtmlFieldId("")" name="@ViewData.TemplateInfo.GetFullHtmlFieldName("")" class="form-control form-control mb-2" />
}
else
{
    <input type="date" value="@Model.Value.ToString("yyyy-MM-dd")" id="@ViewData.TemplateInfo.GetFullHtmlFieldId("")" name="@ViewData.TemplateInfo.GetFullHtmlFieldName("")" class="form-control form-control mb-2" />
}

